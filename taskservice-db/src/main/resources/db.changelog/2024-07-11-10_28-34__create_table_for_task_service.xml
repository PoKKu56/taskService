<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

<changeSet id="1720675812868-1" author="PoKKu56">
    <createTable tableName="task">
        <column name="id" type="UUID" >
            <constraints primaryKey="true" nullable="false"/>
        </column>
        <column name="title" type="text">
            <constraints nullable="false"/>
        </column>
        <column name="description" type="text">
            <constraints nullable="true"/>
        </column>
        <column name="status" type="varchar(20)">
            <constraints nullable="false" checkConstraint="status IN ('CREATED', 'DONE', 'ERROR')"/>
        </column>
        <column name="assignee_id" type="uuid">
            <constraints nullable="false"/>
        </column>
        <column name="created_at" type="timestamptz">
            <constraints nullable="false"/>
        </column>
        <column name="updated_at" type="timestamptz">
            <constraints nullable="false"/>
        </column>
        <column name="notificate_at" type="timestamptz">
            <constraints nullable="false"/>
        </column>
    </createTable>

    <addForeignKeyConstraint baseTableName="task" baseColumnNames="assignee_id"
                             constraintName="fk_assignee_id" referencedTableName="user"
                             referencedColumnNames="id"/>

    <rollback>
        <dropTable tableName="task"/>
    </rollback>

</changeSet>

</databaseChangeLog>